{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "rootDir": "src",
        // "typeRoots": ["./src/@types", "./node_modules/@types"],
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src", "tests", "src/infra/knex/knexfile.ts"]
}
